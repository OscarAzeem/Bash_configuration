pipeline {
  
  agent any
  
  stages {
    
    stages("build){
           setps{
             echo 'Command inside Build'
             echo 'Building the application'
             
           }
     }
           
    stages("build){
           setps{
              echo 'Testing the application'
               }
         }
           
   stages("build){
          setps{
            echo 'Deploying the application'      

          }  
    }   
 
 }
   
 }
