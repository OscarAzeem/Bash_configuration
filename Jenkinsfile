pipeline {
  
  agent any
  
  stages {
    
    stage("build"){
           steps{
             echo 'Command inside Build'
             echo 'Building the application'
             
           }
     }
           
    stage("test"){
           steps{
              echo 'Testing the application'
               }
         }
           
   stage("deploy"){
          steps{
            echo 'Deploying the application'      

          }  
    }   
 
 }
   
 }
